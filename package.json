  "bugs": {
    "url": "https://github.com/EugenyTR/mern-app/issues"
  },
  "homepage": "https://github.com/EugenyTR/mern-app#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "config": "^3.3.2",
    "express": "^4.17.1",
    "express-validator": "^6.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "shortid": "^2.2.15"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.5"
  }
